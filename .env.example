# Personal AI Employee - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# === Core Settings ===

# Vault path - absolute path to your Obsidian vault
VAULT_PATH=./vault

# Development mode - set to "true" to prevent real external actions
DEV_MODE=true

# Dry run - logs intended actions without executing
DRY_RUN=true

# Check interval in seconds for watchers
CHECK_INTERVAL=10

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === FileSystem Watcher (Bronze) ===

# File system watcher - path to monitor for new file drops
WATCH_FOLDER=./vault/Inbox

# === Gmail Watcher (Silver) ===

# Enable Gmail watcher (requires OAuth2 credentials)
ENABLE_GMAIL=false

# Path to Gmail OAuth2 credentials JSON file
GMAIL_CREDENTIALS=credentials.json

# Path to saved Gmail auth token (auto-created on first auth)
GMAIL_TOKEN=token.json

# Gmail search query filter
GMAIL_QUERY=is:unread is:important

# === LinkedIn Watcher (Silver) ===

# Enable LinkedIn watcher (requires Playwright MCP server)
ENABLE_LINKEDIN=false

# Path to Playwright persistent browser session
LINKEDIN_SESSION_PATH=

# Path to MCP client script
MCP_CLIENT_PATH=.claude/skills/browsing-with-playwright/scripts/mcp-client.py

# Playwright MCP server URL
MCP_SERVER_URL=http://localhost:8808
