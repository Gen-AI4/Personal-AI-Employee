# Personal AI Employee - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# Vault path - absolute path to your Obsidian vault
VAULT_PATH=./vault

# Development mode - set to "true" to prevent real external actions
DEV_MODE=true

# Dry run - logs intended actions without executing
DRY_RUN=true

# File system watcher - path to monitor for new file drops
WATCH_FOLDER=./vault/Inbox

# Check interval in seconds for watchers
CHECK_INTERVAL=10

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
